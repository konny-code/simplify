<div class="simplify-top-navbar navbar navbar-dark">
  <div class="container-fluid">

    <!-- Brand -->
    <div class="simplify-logo-wrapper">
      <%= link_to root_path, class: "simplify-logo-link" do %>
        <div class="simplify-logo-circle">
          <%= image_tag "simplify-logo.png", class: "simplify-logo-img" %>
        </div>
      <% end %>
    </div>


    <!-- Right side (always visible, no hamburger) -->
    <ul class="navbar-nav ms-auto flex-row align-items-center">

      <% if user_signed_in? %>
        <!-- (Optional) Home link next to avatar -->
        <!--
        <li class="nav-item me-2">
          <%= link_to "Home", root_path, class: "nav-link small text-white" %>
        </li>
        -->

        <li class="nav-item dropdown">
          <%= image_tag "avatar-placeholder.png",
                        class: "avatar dropdown-toggle",
                        id: "topNavbarDropdown",
                        data: { bs_toggle: "dropdown" },
                        aria: { haspopup: "true", expanded: "false" } %>

          <div class="dropdown-menu dropdown-menu-end position-absolute" aria-labelledby="topNavbarDropdown">
            <%= link_to "Account", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out",
                        destroy_user_session_path,
                        data: { turbo_method: :delete },
                        class: "dropdown-item" %>
          </div>
        </li>

      <% else %>
        <li class="nav-item me-2">
          <%= link_to "Log in",
                      new_user_session_path,
                      class: "nav-link small text-white" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up",
                      new_user_registration_path,
                      class: "btn btn-outline-light btn-sm" %>
        </li>
      <% end %>

    </ul>

  </div>
</div>
