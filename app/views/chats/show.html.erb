<header class="row bg-info text-white py-3">
</header>

<div class="col d-flex justify-content-between align-items-center my-2 px-3">
  <div>
    <p class="mb-0 text-white-50 small">
      Chat about this Article
    </p>
  </div>
</div>

<main class="row flex-grow-1 overflow-auto">
  <div class="col-12 p-3">
    <div class="card shadow-sm border-0 mb-3">
      <div class="card-body">
        <p class="card-text small text-muted">
          <strong>Article snippet:</strong><br>
          <%= truncate(@article.content, length: 140) %>
          <%= link_to "View Full Article", article_path(@article), class: "d-block mt-1 small" %>
        </p>
      </div>
    </div>

    <div class="card shadow-sm border-0">
      <div class="card-body">
        <h5 class="card-title mb-3">Chat</h5>

        <div class="chat-thread mb-3">
          <% @messages.each do |message| %>
            <div class="mb-2">
              <div class="<%= message.role == 'user' ? 'text-end' : 'text-start' %>">
                <span class="badge <%= message.role == 'user' ? 'bg-primary' : 'bg-secondary' %>">
                  <%= message.role == 'user' ? 'You' : 'SIMPLIFY' %>
                </span>
              </div>
              <div class="mt-1 p-2 rounded-3 <%= message.role == 'user' ? 'bg-primary text-white' : 'bg-light' %>">
                <small><%= message.content %></small>
              </div>
            </div>
          <% end %>

          <% if @messages.empty? %>
            <p class="text-muted small mb-0">
              No messages yet. Ask SIMPLIFY something about this Article.
            </p>
          <% end %>
        </div>

        <%= form_with model: [@chat, @message], local: true do |f| %>
          <div class="mb-2">
            <%= f.label :content, "Your question to SIMPLIFY", class: "form-label small fw-bold" %>
            <%= f.text_area :content, rows: 3, class: "form-control" %>
          </div>
          <%= f.hidden_field :role, value: "user" %>

          <div class="d-flex justify-content-between align-items-center">
            <%= link_to "Back to article", article_path(@article), class: "btn btn-outline-secondary btn-sm" %>
            <%= f.submit "Send", class: "btn btn-info text-white fw-bold btn-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>

<%= render "shared/navbar" %>
